pipeline {
    agent any
    environment {
        NODE_VERSION = '22' // Cambia si usas otra versiÃ³n de Node.js
    }
    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Clonando el repositorio...'
                checkout scm
            }
        }
        stage('Build') {
            steps {
                script {
                    try {
                        echo 'âš™ï¸ Instalando dependencias...'
                        sh 'npm install'
                        sh 'npm run build'
                    } catch (Exception e) {
                        error('âŒ Error en la etapa de Build')
                    }
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    try {
                        echo 'ğŸ§ª Ejecutando pruebas y generando cobertura...'
                        sh 'npm test -- --coverage' // Ejecuta las pruebas con cobertura
                    } catch (Exception e) {
                        error('âŒ Error en la etapa de Test')
                    }
                }
            }
        }
        stage('Save Coverage Report') {
            steps {
                script {
                    try {
                        echo 'ğŸ“ Guardando el reporte de cobertura...'
                        sh 'mkdir -p coverage-reports && cp -r ./coverage/* ./coverage-reports/' // Copia el reporte de cobertura
                    } catch (Exception e) {
                        error('âŒ Error al guardar el reporte de cobertura')
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    try {
                        echo 'ğŸš€ Desplegando aplicaciÃ³n...'
                        sh 'npm start &'
                    } catch (Exception e) {
                        error('âŒ Error en la etapa de Deploy')
                    }
                }
            }
        }
    }
    post {
        success {
            echo 'âœ… Pipeline completado con Ã©xito'
            archiveArtifacts artifacts: 'coverage-reports/**', allowEmptyArchive: true // Archiva el reporte de cobertura
        }
        failure {
            echo 'âŒ El pipeline ha fallado'
        }
    }
}